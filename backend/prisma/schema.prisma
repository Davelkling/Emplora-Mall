generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  Customer
  Store
  Admin
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  type     UserType
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  icon  String?
  store Store[]
}

model Store {
  id         Int       @id @default(autoincrement())
  storename  String    @unique
  password   String
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int
}
